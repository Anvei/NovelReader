<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    android:contentDescription="Book shelf item">

    <ImageView
        android:id="@+id/bsi_cover"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:contentDescription="书架上的小说的封面" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/bsi_cover"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <TextView
            android:id="@+id/bsi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bsi_last_read_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textColor="@color/text_color_2"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/bsi_last_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:maxLines="1"
            android:textColor="@color/text_color_2"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bsi_icon_linear"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <ImageButton
            android:id="@+id/bsi_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_book_shelf_item_menu"
            android:background="@color/white"
            android:contentDescription="书架上小说管理按钮" />

    </LinearLayout>

</RelativeLayout>