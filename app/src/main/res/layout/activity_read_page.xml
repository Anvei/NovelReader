<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/readPageDrawer"
    android:fitsSystemWindows="false">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/readPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/chapterContentRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </ScrollView>

        <LinearLayout
            android:id="@+id/chapterSettingView"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/white"
            tools:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <ImageButton
                    android:id="@+id/lastChapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_arrow_left"
                    android:backgroundTint="@color/translucent"
                    android:contentDescription="切换上一章" />
                <ImageButton
                    android:id="@+id/nextChapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_arrow_right"
                    android:backgroundTint="@color/translucent"
                    android:contentDescription="切换下一章" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/chapterListDisplay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:drawableTop="@drawable/ic_chapter_content"
                    android:backgroundTint="@color/chapter_page_floating_view"
                    android:text="目录"
                    android:stateListAnimator="@null"/>
                <Button
                    android:id="@+id/chapterPageNovelHome"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:backgroundTint="@color/chapter_page_floating_view"
                    android:drawableTop="@drawable/ic_read_page_novel_home"
                    android:text="详情"
                    android:stateListAnimator="@null"/>
                <Button
                    android:id="@+id/temp1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:backgroundTint="@color/chapter_page_floating_view"
                    android:drawableTop="@drawable/ic_read_page_translation"
                    android:text="切换横屏"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/chapterPageSetting"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:backgroundTint="@color/chapter_page_floating_view"
                    android:drawableTop="@drawable/ic_font_setting"
                    android:text="设置"
                    android:stateListAnimator="@null"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/readNavigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_head" />

</androidx.drawerlayout.widget.DrawerLayout>